{
	"name": "vsql-developer",
	"displayName": "VsQl Developer",
	"publisher": "fdiehl",
	"description": "Provides functionallity for compiling PLSQL and SQL code with SQLcl inside VScode",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.40.0"
	},
	"repository": {
  		"type" : "git",
  		"url" : "https://github.com/fd-primus/VSQL-Developer"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vsql-developer.compile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vsql-developer.compile",
				"title": "Compile PLSQL"
			}
		],
		"configuration":[
			{
				"title": "vsql-developer configurations",
				"type": "object",
				"properties": {
					"vsql-developer.sqlcl":{
					"type": "string",
					"default": "sql",
					"description": "The Path to your sqlcl executable"
					}
				}
			}
		],
		"taskDefinitions": [
			{
				"type": "compile PlSQL"
			}
		],
		"problemMatchers": [
			{
				"name": "plsqlpm",
				"owner": "plsql",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern":{
					"regexp": "(.*) (\\d*)\/(\\d*) (.*?) (.*)",
                        "severity": 1,
                        "line": 2,
                        "column": 3,
                        "file": 4,
                        "message": 5,
                        "loop": true
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^10.2.0",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
